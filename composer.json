{
    "name": "elysiaroot/darak",
    "type": "project",
    "description": "Darak(다락/多樂) is a social network service building tool compatible with ActivityPub.",
    "homepage": "https://github.com/elysiaroot/Darak",
    "license": "AGPL-3.0",
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "support": {
        "issues": "https://github.com/elysiaroot/Darak/issues",
        "source": "https://github.com/elysiaroot/Darak"
    }
}
